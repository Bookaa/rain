# base

let node = table

node.new = func(self)
  let ret = table :: self
  save ret


let value_node = table :: node

value_node.new = func(self, value)
  let ret = table :: self
  save ret
  ret.value = value


let pred_block = table :: node

pred_block.new = func(self, pred, body)
  let ret = table :: self
  save ret
  ret.pred = pred
  ret.body = body

# structure

export _list = table :: node

_list.items = func(self)
  let i = 0
  return func()
    save self[i]
    i = i + 1

_list.keys = func(self)
  let i = 0
  return func()
    if self[i] == null
      return

    save i
    i = i + 1

export _block = table :: node

_block.tag = "block"
_block.new = func(self, stmts, expr)
  let ret = table :: self
  save ret
  ret.stmts = stmts
  ret.expr = expr

_block.empty = func(self)
  return self:new(table, null)

_block.add = func(self, stmt)
  let idx = length(self.stmts)
  self.stmts[idx] = stmt

_block.items = func(self)
  let i = 0
  return func()
    save self.stmts[i]
    i = i + 1


