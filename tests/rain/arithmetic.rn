import unit

export main = func()
  @unit.init

  @unit.group addition
    1 + 1 == 2
    1 + 1.0 == 2.0
    1.0 + 1 == 2.0
    1.0 + 1.0 == 2.0

  @unit.group subtraction
    2 - 1 == 1
    2 - 1.0 == 1.0
    2.0 - 1 == 1.0
    2.0 - 1.0 == 1.0

  @unit.group multiplication
    3 * 4 == 12
    3 * 4.0 == 12.0
    3.0 * 4 == 12.0
    3.0 * 4.0 == 12.0

  @unit.group division
    7 / 4 == 1
    7 / 4.0 == 1.75
    7.0 / 4 == 1.75
    7.0 / 4.0 == 1.75
